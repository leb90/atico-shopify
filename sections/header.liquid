    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-wrapper .header__collections-mobile-toggle .svg-wrapper svg {
    color: #FFFFFF;
  }

  /* Botón de categorías desktop (sticky) */
  .collections-sidebar-wrapper .collections-sidebar__toggle-button {
    position: fixed;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    z-index: 50;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #E53E3E;
    color: white;
    border: none;
    padding: 1.2rem 0.8rem;
    border-radius: 0 1.5rem 1.5rem 0;
    font-size: 1.2rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
    width: 4.5rem;
    transition: all 0.3s ease;
  }

  .collections-sidebar-wrapper .collections-sidebar__toggle-button:hover {
    background-color: rgba(229, 62, 62, 0.9);
    transform: translateY(-50%) translateX(0.5rem);
    box-shadow: 3px 3px 12px rgba(0, 0, 0, 0.3);
  }

  /* Ocultar botón desktop en móvil */
  @media screen and (max-width: 749px) {
    .collections-sidebar-wrapper .collections-sidebar__toggle-button {
      display: none;
    }
  }

  /* Ocultar botón móvil en desktop */
  @media screen and (min-width: 750px) {
    .header-wrapper .header__collections-mobile-toggle {
      display: none;
    }
  }

  /* Estilos específicos para el botón de búsqueda */
  .header__icon--search {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    transition: background-color 0.2s ease;
  }

  .header__icon--search:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .header__icon--search svg {
    width: 20px;
    height: 20px;
  }

  .header__heading-logo-wrapper {
    left: 0;
    top: 0;
    height: 100%;
