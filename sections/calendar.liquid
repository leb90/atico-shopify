<link rel="stylesheet" href="{{ 'component-calendar.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="calendar-section">
  <div class="calendar-container">
    <div class="calendar-header">
      <h2 class="calendar-title">{{ section.settings.title | default: 'Calendario de Actividades Semanales' }}</h2>
      <p class="calendar-subtitle">{{ section.settings.subtitle | default: 'Organiza tu semana con nuestros torneos y eventos' }}</p>
    </div>

    <div class="calendar-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'day' %}
            <div class="calendar-day" {{ block.shopify_attributes }}>
              <div class="day-header">
                <span class="day-name">{{ block.settings.day_name }}</span>
                <span class="day-time">{{ block.settings.time_range }}</span>
              </div>
              
              <ul class="activities-list">
                                                 {% if block.settings.activity_1_enabled %}
                   <li class="activity-item">
                     <div class="activity-time">{{ block.settings.activity_1_time }}</div>
                     <div class="activity-content">
                       <div class="activity-game">
                         {% if block.settings.activity_1_image != blank %}
                           <img src="{{ block.settings.activity_1_image | image_url: width: 64 }}" alt="{{ block.settings.activity_1_game }}" class="game-image">
                         {% endif %}
                         <span>{{ block.settings.activity_1_game }}</span>
                       </div>
                       <div class="activity-type">{{ block.settings.activity_1_type }}</div>
                       {% if block.settings.activity_1_duration != blank %}
                         <div class="activity-duration">{{ block.settings.activity_1_duration }}</div>
                       {% endif %}
                     </div>
                   </li>
                 {% endif %}

                                 {% if block.settings.activity_2_enabled %}
                   <li class="activity-item">
                     <div class="activity-time">{{ block.settings.activity_2_time }}</div>
                     <div class="activity-content">
                                               <div class="activity-game">
                          {% if block.settings.activity_2_image != blank %}
                            <img src="{{ block.settings.activity_2_image | image_url: width: 64 }}" alt="{{ block.settings.activity_2_game }}" class="game-image">
                          {% endif %}
                          <span>{{ block.settings.activity_2_game }}</span>
                        </div>
                       <div class="activity-type">{{ block.settings.activity_2_type }}</div>
                       {% if block.settings.activity_2_duration != blank %}
                         <div class="activity-duration">{{ block.settings.activity_2_duration }}</div>
                       {% endif %}
                     </div>
                   </li>
                 {% endif %}

                                 {% if block.settings.activity_3_enabled %}
                   <li class="activity-item">
                     <div class="activity-time">{{ block.settings.activity_3_time }}</div>
                     <div class="activity-content">
                                               <div class="activity-game">
                          {% if block.settings.activity_3_image != blank %}
                            <img src="{{ block.settings.activity_3_image | image_url: width: 64 }}" alt="{{ block.settings.activity_3_game }}" class="game-image">
                          {% endif %}
                          <span>{{ block.settings.activity_3_game }}</span>
                        </div>
                       <div class="activity-type">{{ block.settings.activity_3_type }}</div>
                       {% if block.settings.activity_3_duration != blank %}
                         <div class="activity-duration">{{ block.settings.activity_3_duration }}</div>
                       {% endif %}
                     </div>
                   </li>
                 {% endif %}

                                 {% if block.settings.activity_4_enabled %}
                   <li class="activity-item">
                     <div class="activity-time">{{ block.settings.activity_4_time }}</div>
                     <div class="activity-content">
                                               <div class="activity-game">
                          {% if block.settings.activity_4_image != blank %}
                            <img src="{{ block.settings.activity_4_image | image_url: width: 64 }}" alt="{{ block.settings.activity_4_game }}" class="game-image">
                          {% endif %}
                          <span>{{ block.settings.activity_4_game }}</span>
                        </div>
                       <div class="activity-type">{{ block.settings.activity_4_type }}</div>
                       {% if block.settings.activity_4_duration != blank %}
                         <div class="activity-duration">{{ block.settings.activity_4_duration }}</div>
                       {% endif %}
                     </div>
                   </li>
                 {% endif %}

                {% unless block.settings.activity_1_enabled or block.settings.activity_2_enabled or block.settings.activity_3_enabled or block.settings.activity_4_enabled %}
                  <li class="no-activities">
                    No hay actividades programadas para este día
                  </li>
                {% endunless %}
              </ul>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="calendar-footer">
      <p class="footer-text">
        {{ section.settings.footer_text | default: 'Todos los torneos son oficiales a menos que se indique lo contrario. ¡Ven y únete a la diversión!' }}
        {% if section.settings.show_contact %}
          <br><span class="footer-highlight">Para más información, contáctanos.</span>
        {% endif %}
      </p>
    </div>
  </div>
</div>

