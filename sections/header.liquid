  .header-wrapper .header .header__icon,
  .header-wrapper .header .list-menu__item,
  .header-wrapper .header .header__menu-item,
  .header-wrapper .header .header__heading,
  .header-wrapper .header .h2 {
    color: #FFFFFF;
  }

