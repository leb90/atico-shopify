    }

    .header__heading-logo-wrapper {
      width: 60px;
    }
  }

  /* BUSCADOR CONVERTIDO A DROPDOWN SIMPLE */
  .header-wrapper .header__search details-modal {
    position: static;
    display: block;
  }

  .header-wrapper .header__search details {
    position: relative;
  }

  .header-wrapper .header__search details[open] .search-modal.modal__content {
    position: relative;
    top: 10px;
    left: 0;
    right: 0;
