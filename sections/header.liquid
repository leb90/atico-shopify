    background-color: #FFFFFF;
    color: #E53E3E;
    border: 2px solid #FFFFFF;
  }

  /* Contenedor del título - centrado horizontalmente */
  .header-wrapper .header .header__heading {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    z-index: 2;
    text-align: center;
  }

  .header-wrapper .header .header__heading-link {
    text-decoration: none;
    display: block;
    margin: 0;
    text-align: center;
  }

  /* Reglas específicas para diferentes posiciones del header */
  .header-wrapper .header.header--middle-left .header__heading,
  .header-wrapper .header.header--middle-center .header__heading,
  .header-wrapper .header.header--top-left .header__heading,
  .header-wrapper .header.header--top-center .header__heading {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    text-align: center;
  }

  /* Centrado en todas las páginas */
  body.template-index .header-wrapper .header .header__heading,
  body.template-product .header-wrapper .header .header__heading,
  body.template-collection .header-wrapper .header .header__heading,
  body.template-page .header-wrapper .header .header__heading,
  body.template-blog .header-wrapper .header .header__heading,
  body.template-article .header-wrapper .header .header__heading,
  body.template-search .header-wrapper .header .header__heading,
  body.template-cart .header-wrapper .header .header__heading {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    text-align: center;
  }

  /* Buscador dropdown personalizado */
  .header__search {
    position: relative;
  }

  /* Campo de búsqueda */
  .header-wrapper .search-modal__form .field {
    position: relative;
    margin-bottom: 0;
  }

  .header-wrapper .search-modal__form .search__input {
    width: 100%;
    padding: 12px 16px;
    padding-right: 85px;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    font-size: 16px;
    background: white;
    color: #333;
    transition: border-color 0.3s ease;
  }

  .header-wrapper .search-modal__form .search__input:focus {
    outline: none;
    border-color: #E53E3E;
  }

  .header-wrapper .search-modal__form .search__input::placeholder {
    color: #999;
  }

  .header-wrapper .search-modal__form .field__label {
    position: absolute;
    left: -9999px;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }

  /* Botones del buscador */
  .header-wrapper .search-modal__form .search__button {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: #E53E3E;
    color: white;
    border: none;
    padding: 6px 8px;
    border-radius: 4px;
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-wrapper .search-modal__form .search__button:hover {
    background: #d63031;
  }

  .header-wrapper .search-modal__form .reset__button {
    position: absolute;
    right: 45px;
    top: 50%;
    transform: translateY(-50%);
    background: #666;
    color: white;
    border: none;
    padding: 6px 8px;
    border-radius: 4px;
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-wrapper .search-modal__form .reset__button:hover {
    background: #999;
  }

  /* Botón de cerrar */
  .header-wrapper .search-modal__close-button {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    color: #666;
    font-size: 20px;
    cursor: pointer;
  }

  /* Resultados de búsqueda predictiva */
  .header-wrapper .predictive-search--header {
    margin-top: 16px;
    max-height: 400px;
    overflow-y: auto;
  }

  /* No scroll lock */
  body.search-modal-open,
  html.search-modal-open {
    overflow: auto;
    overflow-x: auto;
    overflow-y: auto;
  }

  /* Prevenir desplazamiento lateral */
  body[style*="overflow"].search-modal-open {
    overflow: auto;
    overflow-x: auto;
    overflow-y: auto;
  }

    /* Iconos del header en su posición correcta */
  .header__icons {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 3;
  }

  /* Botón de categorías móvil */
  .header-wrapper .header__collections-mobile-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .header-wrapper .header__collections-mobile-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

