{% comment %}
  Renders a collections sidebar that can be toggled from a sticky button.

  Usage:
  {% render 'collections-sidebar' %}
{% endcomment %}

{{ 'component-collections-sidebar.css' | asset_url | stylesheet_tag }}

<script src="{{ 'collections-sidebar.js' | asset_url }}" defer="defer"></script>

<collections-sidebar class="collections-sidebar-wrapper">
  <!-- Botón sticky para abrir la sidebar -->
  <div class="collections-sidebar__toggle-button" id="collections-sidebar-toggle">
    <button 
      class="collections-sidebar__button button"
      aria-label="Abrir categorías"
      type="button"
    >
      <span class="svg-wrapper">
        {{- 'icon-hamburger.svg' | inline_asset_content -}}
      </span>
      <span class="collections-sidebar__button-text">
        <span>C</span>
        <span>a</span>
        <span>t</span>
        <span>e</span>
        <span>g</span>
        <span>o</span>
        <span>r</span>
        <span>í</span>
        <span>a</span>
        <span>s</span>
      </span>
    </button>
  </div>

  <!-- Sidebar con overlay -->
  <div class="collections-sidebar__container" id="collections-sidebar-container">
    <div class="collections-sidebar__overlay" id="collections-sidebar-overlay"></div>
    
    <div class="collections-sidebar__drawer gradient color-background" role="dialog" aria-modal="true" aria-label="Categorías de productos">
      <!-- Header de la sidebar -->
      <div class="collections-sidebar__header">
        <h2 class="collections-sidebar__heading h3">Categorías</h2>
        <button
          class="collections-sidebar__close"
          type="button"
          id="collections-sidebar-close"
          aria-label="Cerrar categorías"
        >
          <span class="svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>

      <!-- Lista de collections -->
      <nav class="collections-sidebar__navigation">
        <ul class="collections-sidebar__list list-menu" role="list">
          <li class="collections-sidebar__item">
            <a href="/collections/pokemon" class="collections-sidebar__link link link--text focus-inset">
              <span class="svg-wrapper">
                {{- 'icon-star.svg' | inline_asset_content -}}
              </span>
              Pokemon
            </a>
          </li>
          <li class="collections-sidebar__item">
